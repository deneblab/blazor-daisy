@page "/example/popover"
@namespace Deneblab.BlazorDaisy.Areas.Example.Views.Pages
@rendermode InteractiveServer
@using Deneblab.BlazorDaisy.Components.Layout
@using Deneblab.BlazorDaisy.Components.Popover
@inject IPopoverService Popover

<PageTitle>Popover Examples</PageTitle>

<PageHeader
    Title="Popover Examples"
    Subtitle="Interactive examples demonstrating the Popover system" />

<div class="space-y-6">
    <!-- Basic Popover -->
    <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Basic Popover</h2>
            <p class="text-base-content/70">Click button to toggle a simple popover.</p>
            <div class="flex flex-wrap gap-4 mt-4">
                <div class="dropdown dropdown-bottom">
                    <div tabindex="0" role="button" class="btn btn-primary">
                        Click me
                    </div>
                    <div tabindex="0" class="dropdown-content card card-compact bg-base-100 shadow-xl w-64 z-10">
                        <div class="card-body">
                            <h3 class="font-bold">Popover Title</h3>
                            <p>This is a simple popover using DaisyUI dropdown.</p>
                            <div class="card-actions justify-end">
                                <button class="btn btn-sm btn-primary">Action</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Popover Positions -->
    <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Popover Positions</h2>
            <p class="text-base-content/70">Different positioning options.</p>
            <div class="flex flex-wrap gap-4 mt-4 justify-center">
                <div class="dropdown dropdown-top">
                    <div tabindex="0" role="button" class="btn btn-outline">Top</div>
                    <div tabindex="0" class="dropdown-content card card-compact bg-base-100 shadow-xl w-48 z-10">
                        <div class="card-body">
                            <p>Popover on top</p>
                        </div>
                    </div>
                </div>
                <div class="dropdown dropdown-bottom">
                    <div tabindex="0" role="button" class="btn btn-outline">Bottom</div>
                    <div tabindex="0" class="dropdown-content card card-compact bg-base-100 shadow-xl w-48 z-10">
                        <div class="card-body">
                            <p>Popover on bottom</p>
                        </div>
                    </div>
                </div>
                <div class="dropdown dropdown-left">
                    <div tabindex="0" role="button" class="btn btn-outline">Left</div>
                    <div tabindex="0" class="dropdown-content card card-compact bg-base-100 shadow-xl w-48 z-10">
                        <div class="card-body">
                            <p>Popover on left</p>
                        </div>
                    </div>
                </div>
                <div class="dropdown dropdown-right">
                    <div tabindex="0" role="button" class="btn btn-outline">Right</div>
                    <div tabindex="0" class="dropdown-content card card-compact bg-base-100 shadow-xl w-48 z-10">
                        <div class="card-body">
                            <p>Popover on right</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Hover Popover -->
    <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Hover Popover</h2>
            <p class="text-base-content/70">Opens on hover.</p>
            <div class="flex flex-wrap gap-4 mt-4">
                <div class="dropdown dropdown-hover">
                    <div tabindex="0" role="button" class="btn btn-secondary">Hover me</div>
                    <div tabindex="0" class="dropdown-content card card-compact bg-base-100 shadow-xl w-64 z-10">
                        <div class="card-body">
                            <h3 class="font-bold">Hover Popover</h3>
                            <p>This popover appears on hover and disappears when you move away.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Popover with Form -->
    <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Popover with Form</h2>
            <p class="text-base-content/70">Popover containing form elements.</p>
            <div class="flex flex-wrap gap-4 mt-4">
                <div class="dropdown">
                    <div tabindex="0" role="button" class="btn btn-accent">Edit Settings</div>
                    <div tabindex="0" class="dropdown-content card card-compact bg-base-100 shadow-xl w-72 z-10">
                        <div class="card-body">
                            <h3 class="font-bold mb-2">Quick Settings</h3>
                            <div class="form-control">
                                <label class="label cursor-pointer">
                                    <span class="label-text">Enable notifications</span>
                                    <input type="checkbox" class="toggle toggle-primary" checked />
                                </label>
                            </div>
                            <div class="form-control">
                                <label class="label cursor-pointer">
                                    <span class="label-text">Dark mode</span>
                                    <input type="checkbox" class="toggle toggle-primary" />
                                </label>
                            </div>
                            <div class="form-control mt-2">
                                <label class="label">
                                    <span class="label-text">Volume</span>
                                </label>
                                <input type="range" min="0" max="100" value="70" class="range range-primary range-sm" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Code Example -->
    <div class="card bg-base-200 shadow-xl">
        <div class="card-body">
            <h2 class="card-title">Code Example</h2>
            <p class="text-base-content/70">Using DaisyUI dropdown for popovers.</p>
            <div class="mockup-code mt-4">
                <pre data-prefix="1"><code>&lt;div class="dropdown dropdown-bottom"&gt;</code></pre>
                <pre data-prefix="2"><code>  &lt;div tabindex="0" role="button" class="btn"&gt;</code></pre>
                <pre data-prefix="3"><code>    Click me</code></pre>
                <pre data-prefix="4"><code>  &lt;/div&gt;</code></pre>
                <pre data-prefix="5"><code>  &lt;div tabindex="0" class="dropdown-content card"&gt;</code></pre>
                <pre data-prefix="6"><code>    &lt;div class="card-body"&gt;</code></pre>
                <pre data-prefix="7"><code>      Popover content</code></pre>
                <pre data-prefix="8"><code>    &lt;/div&gt;</code></pre>
                <pre data-prefix="9"><code>  &lt;/div&gt;</code></pre>
                <pre data-prefix="10"><code>&lt;/div&gt;</code></pre>
            </div>
        </div>
    </div>

    <!-- Back Navigation -->
    <div class="flex justify-end">
        <a href="/example" class="btn btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
            </svg>
            Back to Examples
        </a>
    </div>
</div>
