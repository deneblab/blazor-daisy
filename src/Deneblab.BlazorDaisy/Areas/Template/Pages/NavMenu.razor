@namespace Deneblab.BlazorDaisy.Components.Layout
@rendermode InteractiveServer
@inject IMenuService MenuService
@inject IJSRuntime JS
@implements IDisposable

<aside class="nav-sidebar @SidebarClass transition-all duration-300 bg-base-200 flex flex-col">
    <div class="@HamburgerContainerClass">
        <button @onclick="ToggleSidebar" class="btn btn-ghost btn-sm btn-square">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
        </button>
    </div>

    <nav class="flex-1 overflow-y-auto">
        <ul class="@MenuClass">
            @foreach (var item in MenuItems)
            {
                @if (item.Children.Count > 0 && !IsCollapsed)
                {
                    <li>
                        <details @bind:get="GetExpandedState(item.Id)" @bind:set="value => SetExpandedState(item.Id, value)">
                            <summary class="@MenuItemClass">
                                @RenderIcon(item.Icon)
                                <span class="nav-label">@item.Title</span>
                            </summary>
                            <ul>
                                @foreach (var child in item.Children)
                                {
                                    <li>
                                        <NavLink href="@child.Href" Match="NavLinkMatch.All">@child.Title</NavLink>
                                    </li>
                                }
                            </ul>
                        </details>
                    </li>
                }
                else
                {
                    <li>
                        <NavLink href="@item.Href" class="@MenuItemClass" Match="NavLinkMatch.Prefix">
                            @RenderIcon(item.Icon)
                            @if (!IsCollapsed)
                            {
                                <span class="nav-label">@item.Title</span>
                            }
                        </NavLink>
                    </li>
                }
            }
        </ul>
    </nav>
</aside>

@code {
    private bool IsCollapsed { get; set; } = false;
    private Dictionary<string, bool> ExpandedStates { get; set; } = new();
    private List<MenuItem> MenuItems { get; set; } = [];

    private string SidebarClass => IsCollapsed ? "w-16" : "w-48";

    private string HamburgerContainerClass => IsCollapsed
        ? "py-1 flex justify-center"
        : "pl-[15px] py-1";

    private string MenuClass => "menu menu-sm gap-1";

    private string MenuItemClass => IsCollapsed
        ? "flex items-center justify-center"
        : "flex items-center gap-3";

    protected override void OnInitialized()
    {
        MenuService.OnMenuChanged += OnMenuChanged;
        LoadMenuItems();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            try
            {
                var collapsed = await JS.InvokeAsync<bool>("navManager.isCollapsed");
                if (collapsed != IsCollapsed)
                {
                    IsCollapsed = collapsed;
                    StateHasChanged();
                }
            }
            catch
            {
                // Ignore JS interop errors
            }
        }
    }

    private void OnMenuChanged()
    {
        LoadMenuItems();
        InvokeAsync(StateHasChanged);
    }

    private void LoadMenuItems()
    {
        MenuItems = MenuService.GetMenuItems().ToList();
    }

    private bool GetExpandedState(string id)
    {
        return ExpandedStates.TryGetValue(id, out var state) && state;
    }

    private void SetExpandedState(string id, bool value)
    {
        ExpandedStates[id] = value;
    }

    private async Task ToggleSidebar()
    {
        try
        {
            IsCollapsed = await JS.InvokeAsync<bool>("navManager.toggle");
        }
        catch
        {
            IsCollapsed = !IsCollapsed;
        }
    }

    private RenderFragment RenderIcon(string? icon) => builder =>
    {
        if (string.IsNullOrEmpty(icon))
        {
            // Default icon
            builder.OpenElement(0, "svg");
            builder.AddAttribute(1, "xmlns", "http://www.w3.org/2000/svg");
