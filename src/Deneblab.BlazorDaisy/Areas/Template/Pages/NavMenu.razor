            "star" => "M11.049 2.927c.3-.921 1.603-.921 1.902 0l1.519 4.674a1 1 0 00.95.69h4.915c.969 0 1.371 1.24.588 1.81l-3.976 2.888a1 1 0 00-.363 1.118l1.518 4.674c.3.922-.755 1.688-1.538 1.118l-3.976-2.888a1 1 0 00-1.176 0l-3.976 2.888c-.783.57-1.838-.197-1.538-1.118l1.518-4.674a1 1 0 00-.363-1.118l-3.976-2.888c-.784-.57-.38-1.81.588-1.81h4.914a1 1 0 00.951-.69l1.519-4.674z",
            _ => "M4 6h16M4 12h16M4 18h16"
        };

        builder.OpenElement(0, "svg");
        builder.AddAttribute(1, "xmlns", "http://www.w3.org/2000/svg");
        builder.AddAttribute(2, "class", "h-5 w-5 flex-shrink-0");
        builder.AddAttribute(3, "fill", "none");
        builder.AddAttribute(4, "viewBox", "0 0 24 24");
        builder.AddAttribute(5, "stroke", "currentColor");
        builder.OpenElement(6, "path");
        builder.AddAttribute(7, "stroke-linecap", "round");
        builder.AddAttribute(8, "stroke-linejoin", "round");
        builder.AddAttribute(9, "stroke-width", "2");
        builder.AddAttribute(10, "d", path);
        builder.CloseElement();

        // Add second path for cog icon (inner circle)
        if (icon == "cog")
        {
            builder.OpenElement(11, "path");
            builder.AddAttribute(12, "stroke-linecap", "round");
            builder.AddAttribute(13, "stroke-linejoin", "round");
            builder.AddAttribute(14, "stroke-width", "2");
            builder.AddAttribute(15, "d", "M15 12a3 3 0 11-6 0 3 3 0 016 0z");
            builder.CloseElement();
        }

        builder.CloseElement();
    };

    public void Dispose()
    {
        MenuService.OnMenuChanged -= OnMenuChanged;
    }
}
