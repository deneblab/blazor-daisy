@page "/example/settings"
@namespace Deneblab.BlazorDaisy.Areas.Example.Views.Pages.Settings
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize]

<PageTitle>Settings</PageTitle>

<PageHeader
    Title="Settings"
    Subtitle="Manage your application settings" />

<div class="flex flex-col gap-4">
    <a href="/example/settings/general" class="card bg-base-200 hover:bg-base-300 transition-colors">
        <div class="card-body">
            <h2 class="card-title">General</h2>
            <p>Application preferences and display settings</p>
        </div>
    </a>
    <a href="/example/settings/profile" class="card bg-base-200 hover:bg-base-300 transition-colors">
        <div class="card-body">
            <h2 class="card-title">Profile</h2>
            <p>Your personal information and account details</p>
        </div>
    </a>
    <a href="/example/settings/security" class="card bg-base-200 hover:bg-base-300 transition-colors">
        <div class="card-body">
            <h2 class="card-title">Security</h2>
            <p>Password, two-factor authentication, and sessions</p>
        </div>
    </a>
</div>
