@namespace Deneblab.BlazorDaisy.Components.Layout
@rendermode InteractiveServer
@inject NavigationManager Navigation
@inject DaisyAppRegistry Registry
@using Deneblab.BlazorDaisy.Areas.Template.App
@implements IDisposable

<div class="navbar bg-base-100 border-b border-base-300 px-4 min-h-12">
    <div class="flex-none">
        <span class="text-lg font-semibold">@AppName</span>
        <span class="mx-2 text-base-300">|</span>

        @* Breadcrumb integrated with home icon *@
        <div class="text-sm breadcrumbs py-0">
            <ul class="flex items-center">
                <li>
                    <a href="/" class="flex items-center gap-1">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
                        </svg>
                        <span>Home</span>
                    </a>
                </li>
                @foreach (var item in BreadcrumbItems)
                {
                    <li>
                        @if (!string.IsNullOrEmpty(item.Href))
                        {
                            <a href="@item.Href">@item.Label</a>
                        }
                        else
                        {
                            <span>@item.Label</span>
                        }
                    </li>
                }
            </ul>
        </div>
    </div>
    <div class="flex-1"></div>
    <div class="flex-none gap-2">
        @* Theme toggle button - uses daisyUI swap component *@
        <label class="btn btn-ghost btn-sm btn-square swap swap-rotate">
            <input type="checkbox" onclick="themeManager.toggle()" class="theme-controller" />
            @* Sun icon - shown when dark *@
            <svg class="swap-on h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/>
            </svg>
            @* Moon icon - shown when light *@
            <svg class="swap-off h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                <path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Zm-9.5,6.69A8.14,8.14,0,0,1,7.08,5.22v.27A10.15,10.15,0,0,0,17.22,15.63a9.79,9.79,0,0,0,2.1-.22A8.11,8.11,0,0,1,12.14,19.73Z"/>
            </svg>
        </label>

        <span class="text-sm text-base-content/70">Version: @AppVersion</span>

        @* User dropdown *@
        <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost btn-sm btn-square">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                </svg>
            </div>
            <ul tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-52 p-2 shadow-lg border border-base-300">
                <li><a href="/example/settings/profile">Profile</a></li>
                <li><a href="/example/settings">Settings</a></li>
                <li class="border-t border-base-300 mt-2 pt-2">
                    <a href="/auth/logout" class="text-error">Logout</a>
                </li>
            </ul>
        </div>
    </div>
</div>

@code {
    private List<BreadcrumbItem> BreadcrumbItems { get; set; } = new();
    private string AppName => Registry.Config.AppName;
    private string AppVersion => Registry.Version.SemVer;

    private string? _lastPath;
    private string _currentPath = "";

    protected override void OnInitialized()
    {
        // Initialize breadcrumbs from current URL
        UpdateBreadcrumbsFromUri(Navigation.Uri);
        Navigation.LocationChanged += OnLocationChanged;
    }

    private void OnLocationChanged(object? sender, Microsoft.AspNetCore.Components.Routing.LocationChangedEventArgs e)
    {
        UpdateBreadcrumbsFromUri(e.Location);
        StateHasChanged();
    }

    private void UpdateBreadcrumbsFromUri(string location)
    {
        var uri = new Uri(location);
        var path = uri.AbsolutePath.Trim('/');

        if (_lastPath == path)
            return;

        _lastPath = path;
        _currentPath = path;
        UpdateBreadcrumbs();
    }

    private void UpdateBreadcrumbs()
    {
        var path = _currentPath;

        BreadcrumbItems.Clear();

        if (string.IsNullOrEmpty(path))
            return;

        var segments = path.Split('/', StringSplitOptions.RemoveEmptyEntries);
        var currentPath = "";

        for (int i = 0; i < segments.Length; i++)
        {
            currentPath += "/" + segments[i];
            var label = FormatLabel(segments[i]);
            var isLast = i == segments.Length - 1;

            BreadcrumbItems.Add(new BreadcrumbItem
            {
                Label = label,
                Href = isLast ? null : currentPath
            });
        }
    }

    private string FormatLabel(string segment)
    {
        if (string.IsNullOrEmpty(segment))
            return segment;

        return char.ToUpper(segment[0]) + segment[1..].ToLower();
    }

    public void Dispose()
    {
        Navigation.LocationChanged -= OnLocationChanged;
    }

    private class BreadcrumbItem
    {
        public string Label { get; set; } = "";
        public string? Href { get; set; }
    }
}
